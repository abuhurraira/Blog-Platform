# Blog Platform Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# =============================================================================
# Database connection string for Flask backend
DATABASE_URL=postgresql+psycopg://bloguser:blogpass@db:5432/blogdb

# PostgreSQL container environment variables
POSTGRES_DB=blogdb
POSTGRES_USER=bloguser
POSTGRES_PASSWORD=blogpass
POSTGRES_HOST=db
POSTGRES_PORT=5432

# =============================================================================
# FLASK BACKEND CONFIGURATION
# =============================================================================
# Flask environment and debug settings
FLASK_ENV=development
FLASK_DEBUG=true

# Secret keys for security (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production

# JWT token expiration (in hours)
JWT_ACCESS_TOKEN_EXPIRES=24
JWT_REFRESH_TOKEN_EXPIRES=30

# Server configuration
HOST=0.0.0.0
PORT=5000

# =============================================================================
# FRONTEND CONFIGURATION (React)
# =============================================================================
# API endpoint for frontend to connect to backend
REACT_APP_API_URL=http://localhost:5000/api

# Frontend base URL
REACT_APP_BASE_URL=http://localhost:3000

# App metadata
REACT_APP_NAME=Blog Platform

# =============================================================================
# SECURITY & CORS
# =============================================================================
# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
